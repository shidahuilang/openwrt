
config samba
	option name 'OpenWrt'
	option workgroup 'WORKGROUP'
	option description 'OpenWrt'
	option homes '1'
	option autoshare '1'

config sambashare
	option auto '1'
	option name 'mmcblk0p1'
	option path '/mnt/mmcblk0p1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'mmcblk0p1'
	option browseable 'yes'

config sambashare
	option auto '1'
	option name 'mmcblk0p2'
	option path '/mnt/mmcblk0p2'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'mmcblk0p2'
	option browseable 'yes'

config sambashare
	option auto '1'
	option name 'sda1'
	option path '/mnt/sda1'
	option dir_mask '0777'
	option device 'sda1'
	option browseable 'yes'
	option read_only 'no'
	option guest_ok 'no'
	option create_mask '0777'


